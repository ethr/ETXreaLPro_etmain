// Chat //

	SUBWINDOW( 6+(SUBWINDOW_WIDTH)+6, 310, (SUBWINDOW_WIDTH), 52, "CHAT/SOUND" )
	MULTI( 6+(SUBWINDOW_WIDTH)+6+2, 326, (SUBWINDOW_WIDTH)-4, 10, "Display Chat:", .2, 8, "cg_teamChatsOnly", cvarFloatList { "Team only" 1 "Global" 0 } ,"Play only team chat" )
	MULTI( 6+(SUBWINDOW_WIDTH)+6+2, 338, (SUBWINDOW_WIDTH)-4, 10, "Quick Chat Sound:", .2, 8, "cg_noVoiceChats", cvarFloatList { "No" 1 "Yes" 0 } , "Play Quick Chat sound" )
	MULTI( 6+(SUBWINDOW_WIDTH)+6+2, 350, (SUBWINDOW_WIDTH)-4, 10, "Quick Chat Text:", .2, 8, "cg_noVoiceText", cvarFloatList { "No" 1 "Yes" 0 }, "Show Quick Chat text" )


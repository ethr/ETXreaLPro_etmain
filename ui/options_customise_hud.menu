	MULTI( 6+(SUBWINDOW_WIDTH), 241, (SUBWINDOW_WIDTH)-4, 10, "Body Vertical Movement:", .2, 8, "cg_bobup", cvarFloatList { "Default" 0.005 "Off" 0}, "Up-Down Motion Of The Body While Moving")
